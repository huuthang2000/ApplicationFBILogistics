<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".view.driver.UIWellcome.UIWelcome_third">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="350dp"
            android:src="@drawable/welcome3"
            android:layout_height="200dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/accept_permissions"
        android:textColor="#000"
     android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="10dp"

        android:text="@string/accept_permission"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <!--<TextView
        android:layout_width="match_parent"
        android:text="Be notified when they leave\n or arrive home or school"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>-->

    <Button
        android:id="@+id/btn_Next_WelcomeAllow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_button_blue"
        android:text="Allow"
        android:textColor="#fff" />


</LinearLayout>