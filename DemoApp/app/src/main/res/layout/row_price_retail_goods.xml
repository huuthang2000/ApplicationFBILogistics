            <TextView
                android:id="@+id/tv_row_price_retail_goods_typeofcargo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/colAIR_col6"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_row_price_retail_goods_grossweight" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ocean_airfreight"
                android:textSize="17sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_row_price_retail_goods_typeofcargo" />

            <TextView
                android:id="@+id/tv_row_price_retail_goods_ocean_freight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ocean_airfreight"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_row_price_retail_goods_typeofcargo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
