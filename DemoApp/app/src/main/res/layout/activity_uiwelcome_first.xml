<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".view.driver.UIWellcome.UIWelcome_first">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="300dp"
            android:src="@drawable/welcomelogistics"
            android:layout_height="300dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="Welcome Driver \nLocate your in real-time"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <!--<TextView
        android:layout_width="match_parent"
        android:text="Be notified when they leave\n or arrive home or school"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>-->

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#fff"
        android:background="@drawable/bg_button_blue"
        android:layout_marginTop="50dp"
        android:text="Next"
        android:id="@+id/btn_Next_WelcomeFirst"
        android:layout_height="50dp"/>


</LinearLayout>