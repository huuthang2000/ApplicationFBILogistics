<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:paddingBottom="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="10dp"
    android:minHeight="200dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button_people_tranparent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:textColor="#474444"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/life24h_collects_location_app"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:textColor="#474444"
        android:paddingLeft="10dp"
        android:text="@string/always_allow_option"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@android:color/transparent"
        android:layout_height="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_button_pink"
            android:text="Got it!"
            android:id="@+id/btn_All_The_Permission"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>



</LinearLayout>